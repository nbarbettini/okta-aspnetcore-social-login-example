@model CompleteProfileViewModel

<h2>Finish creating your account</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (!string.IsNullOrEmpty(Model?.Error))
            {
                <div class="text-danger">@Model.Error</div>
            }
            <div class="form-group">
                <label asp-for="RewardsNumber"></label>
                <input asp-for="RewardsNumber" class="form-control" />
                <span asp-validation-for="RewardsNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>